@model hdvatob.ViewModel.ChinhanhHoadondientu

@{
    ViewData["Title"] = "Edit";
     var dsdkhd = (IEnumerable<Dsdangkyhoadondientu>)ViewBag.dsdkhd;
}

<section class="content-header">
    <h1>
        Cập nhật thông tin chi nhánh @Model.machinhanh
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active"><a asp-controller="Hoadondientu" asp-action="index">Danh sách chi nhánh</a></li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-header">
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="machinhanh" class="form-control" />
                        <div class="form-group col-md-6">
                            Tên chi nhánh
                            <input asp-for="tenchinhanh" class="form-control" />
                            <span asp-validation-for="tenchinhanh" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            Địa chỉ
                            <input asp-for="diachi" class="form-control" />
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-md-3">
                            Điện thoại
                            <input asp-for="dienthoai" class="form-control" />
                        </div>
                        <div class="form-group col-md-3">
                            Fax
                            <input asp-for="fax" class="form-control" />
                        </div>
                        <div class="form-group col-md-3">
                            Mã số thuế
                            <input asp-for="masothue" class="form-control" />
                        </div>
                        <div class="form-group col-md-2">
                            Ký hiệu
                            <input asp-for="maviettat" class="form-control text-center" />
                        </div>
                        <div class="form-group col-md-1">
                            Active
                            <div class="checkbox">
                                <label>
                                    <input asp-for="isActive" type="checkbox" class="minimal" />
                                </label>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            <a asp-action="index" asp-controller="hoadondientu"  class="btn btn-default"><i class="fa fa-undo"></i></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="col-md-12" style="overflow:auto">
                    @if (ViewBag.count > 0)
                    {
                        <table class="table mytable text-nowrap">
                            <thead>
                                <tr>
                                    <th><i class="fa fa-gear text-center"></i></th>
                                    <th>Mẫu số HD</th>
                                    <th>Ký hiệu HD</th>
                                    <th>Mã số thuế</th>
                                    <th>Số HD từ</th>
                                    <th>Số HD đến</th>
                                    <th>Sử dụng từ ngày</th>
                                    <th>Sử dụng đến ngày</th>
                                    <th>Mainkey</th>
                                    <th>Active</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in dsdkhd)
                                {
                                <tr>
                                    <td class="text-center">
                                        <a asp-action="capnhatDsDangkyhoadon" asp-controller="hoadondientu" asp-route-id="@item.id"><i class="fa fa-edit"></i></a>
                                    </td>
                                    <td class="text-center">@item.mausohd</td>
                                    <td class="text-center">@item.kyhieuhd</td>
                                    <td class="text-center">@item.masothue</td>
                                    <td class="text-center">@item.sohdtu</td>
                                    <td class="text-center">@item.sohdden</td>
                                    <td class="text-center">@item.sudungtungay.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">@item.sudungdenngay.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">@item.mainkey</td>
                                    <td class="text-center">
                                        <input type="checkbox" class="minimal" checked="@item.activation" />
                                    </td>
                                </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <td class="text-center"><a asp-controller="hoadondientu" asp-action="themDsDangkyhoadon" asp-route-chinhanh="@Model.maviettat"><i class="fa fa-plus text-primary"></i></a></td>
                                </tr>
                            </tfoot>
                        </table>
                    }
                    </div>
            </div>
           
        </div>
    </div>
</section>


