@model Hoadon

@{
    ViewData["Title"] = "Cập nhật";
}
@section Scripts {

    <script src="~/Asset/Hoadon/EditHoadonControl.js"></script>

}

<div class="hienthicthd">
    <section class="content-header">
        <h1>
            Điều chỉnh hoá đơn thuế GTGT @ViewBag.idhoadon
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active"><a href="@Context.Session.GetString("urlHoadon")">Danh sách hoá đơn</a></li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box">
                <div class="box-header">
                    <div class="col-md-12">
                        <h3 class="box-title">
                            @if (string.IsNullOrEmpty(Model.keyhddt))
                            {
                                <a asp-action="Datatuvetour" asp-route-idhoadon="@Model.Idhoadon" title="Lấy data từ vé tour"><i class="fa fa-paste text-warning fa-lg"></i></a><i> | </i>
                                <a asp-controller="Invoice" asp-action="TaoHoadonVetour" asp-route-idhoadon="@Model.Idhoadon" title="Phát hành hoá đơn điện tử" onclick="return confirm('Bạn muốn xuất hoá đơn điện tử này?')"><i class="fa  fa-cloud-upload fa-lg"></i></a><i> | </i>
                            }
                            else
                            {
                                <a asp-controller="Invoice" asp-action="Huyhoadon" asp-route-idhoadon="@Model.Idhoadon" title="Huỷ hoá đơn điện tử" onclick="return confirm('Bạn muốn huỷ hoá đơn điện tử này?')"><i class="fa fa-recycle fa-lg text-danger"></i></a><i> | </i>
                                @*<a asp-controller="Invoice" asp-action="#" asp-route-keyhddt="@Model.keyhddt" title="Thay thế hoá đơn điện tử" onclick="return confirm('Bạn muốn thay thế hoá đơn điện tử này?')"><i class="fa fa-refresh fa-lg text-primary"></i></a>*@
                            }
                            <a href="javascript:;" data-id="@Model.Idhoadon" title="Xem trước hoá đơn điện tử" class="previewhoadon"><i class="fa  fa-file-pdf-o fa-lg text-danger"></i></a>
                       </h3>
                            <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="col-md-12">
                        <form asp-action="Edit" id="frmSuahoadon">
                            <input type="hidden" asp-for="Idhoadon" id="txtidhoadon" />
                            <div class="form-group col-md-2">
                                STT
                                <input asp-for="stt" class="form-control text-center" type="text" disabled />
                            </div>
                            <div class="form-group col-md-2">
                                Ngày hoá đơn
                                <input asp-for="ngayct" class="form-control text-center datepicker" type="text" asp-format="{0:dd/MM/yyyy}" />
                            </div>
                            <div class="form-group col-md-2">
                                Số hoá đơn VAT
                                <input asp-for="hdvat" class="form-control text-center" type="text" readonly />
                            </div>
                            <div class="form-group col-md-2">
                                Ký hiệu hoá đơn
                                <input asp-for="kyhieu" class="form-control text-center" type="text" readonly />
                            </div>
                            <div class="form-group col-md-2">
                                Mẫu số hoá đơn
                                <input asp-for="mausohd" class="form-control text-center" type="text" readonly />
                            </div>
                            <div class="form-group col-md-2">
                                HTTT
                                <select asp-items="@ViewBag.httt" asp-for="httt" class="form-control"></select>
                            </div>
                            <div class="form-group col-md-2">
                                Mã KH
                                <div class="input-group">
                                    <input asp-for="makh" class="form-control text-center" type="text" id="utxtmakh" />
                                    <span class="input-group-btn">
                                        <a href="javascript:;" class="btn btn-default" id="btSearchkh_u" title="Tìm thông tin khách hàng"><i class="fa fa-search"></i></a>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group col-md-5">
                                Tên công ty
                                <input asp-for="tenkh" class="form-control" type="text" id="utxttencty" />
                            </div>
                            <div class="form-group col-md-5">
                                Tên khách
                                <input asp-for="tenkhach" class="form-control" type="text" />
                            </div>
                            <div class="form-group col-md-5">
                                Địa chỉ
                                <input asp-for="diachi" class="form-control" type="text" id="utxtdiachi" />
                            </div>
                            <div class="form-group col-md-2">
                                Điện thoại
                                <input asp-for="dienthoai" class="form-control" type="text" id="utxtdienthoai" />
                            </div>
                            <div class="form-group col-md-2">
                                Mã số thuế
                                <input asp-for="msthue" class="form-control" type="text" id="utxtmst" />
                            </div>
                            <div class="form-group col-md-2">
                                Hợp đồng
                                <input asp-for="hopdong" class="form-control" type="text" />
                            </div>
                            <div class="form-group col-md-1">
                                Coupon
                                <div class="checkbox">
                                    <input asp-for="coupon" type="checkbox" class="minimal" />
                                </div>
                            </div>
                            <div class="form-group col-md-2">
                                Bắt đầu
                                <input asp-for="batdau" class="form-control text-center datepicker" type="text" asp-format="{0:dd/MM/yyyy}" />
                            </div>
                            <div class="form-group col-md-2">
                                Kết thúc
                                <input asp-for="ketthuc" class="form-control text-center datepicker" type="text" asp-format="{0:dd/MM/yyyy}" />
                            </div>
                            <div class="form-group col-md-8">
                                Ghi chú
                                <input asp-for="ghichu" class="form-control" type="text" />
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group col-md-12">
                                <input type="submit" value="@ViewBag.capnhat" id="btEdit" class="btn btn-primary" />
                                <a href="@Context.Session.GetString("urlHoadon")" class="btn btn-default">Hủy</a>

                            </div>
                        </form>

                    </div>

                </div>

            </div>
            <div class="box">
                <div class="box-header">
                    <div class="col-md-12">
                        <h3 class="box-title">
                            @if (Model.hdvat == null)
                            {
                                <a href="@Url.Action("ThemctTuhuyhd", "Chitiethoadon", new { idhoadon = Model.Idhoadon })" title="Thêm chi tiết từ huỷ hoá đơn VAT"><i class="fa fa-th fa-lg text-warning"></i></a>
                            }

                        </h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="col-md-12">
                        <div id="chitiethoadon"></div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>
<div id="uModalTimkh" class="modal fade" role="dialog" style="display:none">
    <div class="listtimkh"></div>
</div>





